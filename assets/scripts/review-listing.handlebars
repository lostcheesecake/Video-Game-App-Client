{{#each reviews as |review|}}

  <section class ="review" data-id="{{review.id}}">
    <h2>
      {{review.video_game}}
    </h2>
    <p>
      {{review.text}}
    </p>
    <button data-id={{review.id}} value="delete reviews" class="delete-button" type="button">Delete Review</button>
  </section>

  <form data-id="{{review.id}}" class="update-review-form">
    <input type="text" name="review[text]" placeholder="updateReview">
    <button type="submit">Update Review</button>
  </form>


